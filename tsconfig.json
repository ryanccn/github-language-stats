{
	"compilerOptions": {
		"strict": true,
		"downlevelIteration": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["bun-types"]
	},
	"include": ["**/*.ts", "src/index.ts"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
